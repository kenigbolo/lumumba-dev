<% if current_user %>
<h1 class="title_h1">My dashboard</h1>
<p class="page-description">Welcome to your dashboard. You can set up your account, check your orders and manage your designs here.</p>
<div class="columns">
   <div class="columns__left-menu">

   <!-- Left menu start -->
	<%= render "left_menu" %>
	<!-- Left menu finish -->
	
   </div>
   <div class="columns__content">
      <h3 class="title_h3">My profile</h3>
      <!-- Account settings start -->
      <div class="account">
         <div class="account__avatar">
            <img class="account__avatar-photo" src="<%= @user.image %>">
            <div class="account__avatar-edit">Edit</div>
         </div>
         	<!-- Account settings start -->
		 	<%= render "edit_profile" %>

            
            <div class="account__connect">
               <div class="account__connect-button">
                  <div class="account__connect-icon"><i class="fa fa-facebook" aria-hidden="true"></i></div>
                  <div class="account__connect-text"><%= @user.first_name %></div>
               </div>
               <div class="account__connect-button">
                  <div class="account__connect-icon"><i class="fa fa-twitter" aria-hidden="true"></i></div>
                  <div class="account__connect-text"><%= @user.first_name %></div>
               </div>
               <div class="account__connect-button">
                  <div class="account__connect-icon"><i class="fa fa-google-plus" aria-hidden="true"></i></div>
                  <div class="account__connect-text"></div>
               </div>
               <div class="account__connect-button">
                  <div class="account__connect-icon"><i class="fa fa-pinterest-p" aria-hidden="true"></i></div>
                  <div class="account__connect-text"></div>
               </div>
               <div class="account__connect-button">
                  <div class="account__connect-icon"><i class="fa fa-instagram" aria-hidden="true"></i></div>
                  <div class="account__connect-text"><%= @user.first_name %></div>
               </div>
            </div>
         </form>
      </div>
      <!-- Account settings finish -->
   </div>
</div>
<% end %>
