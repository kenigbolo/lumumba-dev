<!-- Countdown start -->
<div class="countdown">
    <div class="countdown__wrapper">
        <div class="countdown__title">
            <div class="countdown__timer">
              <div class="countdown__timer-value countdown__timer-value_h">00</div>
              <div class="countdown__timer-value countdown__timer-value_m">20</div>
              <div class="countdown__timer-value countdown__timer-value_s">49</div>
            </div>
            until competition ends
        </div>

    </div>
</div>
<!-- Countdown finish -->
<!-- Latest start -->
<div class="latest">
    <div class="latest__wrapper">
        <div class="latest__title">Latest competition designs</div>
        <div class="latest__tile-list">
            <figure class="latest__tile"><img class="latest__image" src="static/uploads/latest_1.jpg?v=1466944290916">
                <figcaption class="latest__caption"><a class="latest__link" href="participant.html">Shana M. - Olive blouse shirt</a></figcaption>
            </figure>
            <figure class="latest__tile"><img class="latest__image" src="static/uploads/latest_2.jpg?v=1466944290916">
                <figcaption class="latest__caption"><a class="latest__link" href="participant.html">Carolyn J. - Cashmere sweater</a></figcaption>
            </figure>
        </div>
    </div>
</div>
<!-- Latest finish -->
<!-- Call to action start -->
<div class="call-to-action">
    <div class="call-to-action__wrapper">
        <div class="call-to-action__title">Join the competition and become a Lumumba designer</div>
        <div class="call-to-action__text">If you win, your designs will become a Lumumba clothing collection. You create amazing designs, we take care of the rest</div>
        <a href="./become.html" class="button button_white-blue">
            <div class="button__text">Become a Designer</div>
        </a>
    </div>
</div>
<!-- Call to action finish -->
<!-- Filter start -->
<div class="filter">
    <div class="filter__wrapper">
        <div class="filter__droprown">
            <div class="filter__droprown-title">Sort by</div>
            <select class="filter__droprown-select" name="sort">
                <option value="dresses" selected="selected">Dresses</option>
                <option value="t-shirts">T-Shirts</option>
            </select>
        </div>
        <div class="filter__droprown">
            <div class="filter__droprown-title">Filter</div>
            <select class="filter__droprown-select" name="filter">
                <option value="dresses" selected="selected">Dresses</option>
                <option value="t-shirts">T-Shirts</option>
            </select>
        </div>
        <div class="filter__summary"><%= will_paginate @designs, class: "filter__summary-highlight" %></div>
    </div>
</div>
<!-- Filter finish -->
